<%- include ('partials/header.ejs');%>
<body>
    <%- include ('partials/navbar.ejs');%>
   
    <div class="container py-3">
            <hr>
            <h1><%= pergunta.titulo %> </h1>
            <p><%= pergunta.descricao %> </p>
            <hr>
            <form method="post" action="/responder">
                <div class="card bg-dark">
                    <div class="card-header ">
                        <h3>Responda:</h3>
                    </div>
                    <div class="card-body">
                        <label>Resposta</label>
                        
                        <textarea name="corpo"  placeholder="digite sua resposta" class="form-control"></textarea>
                        <hr>
                        <input type="hidden" name="PerguntaId" value="<%= pergunta.id %>">
                        <button   class="btn btn-primary">Responder</button>
                    </div>
                </div>     
            </form>
            <hr>
            <h3>Respostas</h3>
            <% respostas.forEach(resposta =>{%>
                <br>
               <div class="card">
                   
                   <div class="card-body">
                            <%= resposta.corpo %>
                   </div>
               </div>
            <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs');%>