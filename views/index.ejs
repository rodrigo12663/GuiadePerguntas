<%- include ('partials/header.ejs');%>
<body>
    <%- include ('partials/navbar.ejs');%>
   
    <div class="container py-3">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Responder</a>
        <br>
        <br> 
        <% perguntas.forEach(pergunta=>{%>
            <div class="card">
                <div class="card-body">
                        <h3><%=pergunta.titulo%></h3>
                </div>
                <div class="card-footer">
                        <a href="/perguntar/<%=pergunta.id%>" class="btn btn-primary">Responder</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs');%>